{
  "tabWidth": 2,                 // Alignment to .editorconfig settings
  "useTabs": false,              // Matches indent_style = space
  "printWidth": 80,              // Default max line length
  "singleQuote": false,          // Consistent with many modern codebases
  "trailingComma": "all",        // Add trailing commas where possible
  "bracketSpacing": true,        // Spaces inside object literals
  "arrowParens": "always",       // Parentheses around arrow function arguments
  "endOfLine": "lf"              // Matches end_of_line = lf
}